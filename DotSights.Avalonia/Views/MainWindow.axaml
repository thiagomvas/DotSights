<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DotSights.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DotSights.Avalonia.Views.MainWindow"
        xmlns:views="clr-namespace:DotSights.Avalonia.Views"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DotSights Dashboard"
		RequestedThemeVariant="Dark"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">


	<Panel>

		<Border Padding="15, 15, 0, 0">
			<DockPanel>
				<!-- Side Bar -->
				<Button DockPanel.Dock="Top" Width="20" Height="20" Background="Transparent" HorizontalAlignment="Left">
					<Image Source="/Assets/avalonia-logo.ico" Width="20" Height="20"/>
				</Button>
				<StackPanel DockPanel.Dock="Left" Margin="0, 0, 25, 0" Background="Transparent">
					<views:SideBarView />
				</StackPanel>

				<!-- Content -->
				<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

					<views:HomeView DataContext="{Binding HomePage}"/>
				</ScrollViewer>
			</DockPanel>

		</Border>
	</Panel>
</Window>
